<link rel="stylesheet" href="/toastify-js/src/toastify.css">
<div class="control d-flex">
    <div class="container ">
        <div class="row">
            <div class="col-12">
                <select name="type_control" class="form-control fw-bold mt-3 type_navigation">
                    <option value="null">Chọn API</option>
                    <option value="robot_task_gotarget_req" selected>1.Di chuyển điểm</option>
                    <option value="robot_control_reloc_req">2.Điểm di chuyển</option>
                    <option value="robot_control_comfirmloc_req">3.Xác nhận vị trí</option>
                </select>
            </div>
        </div>
        <div class="navigation-content">
            <div class="row gy-2 mt-3">
                <div class="col-12 col-sm-12 col-md-12 col-xl-6 col-xxl-6 py-2">
                    <span class="mb-1 "><b>1. Di chuyển điểm</b></span>
                    <form action="#" class="form_navigation_go">
                        <div>
                            <div class="mb-1">Điểm di chuyển</div>
                            <div class="d-flex gap-3 mb-2">
                                <label  class="form-label flex-grow-1">
                                    <input type="text" name="id" class="form-control navigation_id_input" placeholder="Nhập điểm di chuyển...">
                                </label>
                                <button class="btn btn-warning btn_navigation_clear" type="button">Xóa</button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Gửi xác nhận</button>
                        <div class="my-3 d-flex gap-3">
                            <button type="button" class="btn btn-warning btn_navigation_stop">Tạm dừng</button>
                            <button type="button" class="btn btn-success btn_navigation_resume">Tiếp tục</button>
                            <button type="button" class="btn btn-danger btn_navigation_cancel">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="control-result mt-3">
            <h5>Kết quả:</h5>
            <pre class="result_api">
            </pre>
        </div>
    </div>
</div>
<script src="/toastify-js/src/toastify.js"></script>
<script type="module" src="/javascripts/navigation/index.js"></script>
